@model Gestor_de_gastos.viewModel.MovimientoViewModel

@{
    ViewData["Title"] = "Nuevo Movimiento";
}

<h3 class="mb-4">Nuevo Movimiento</h3>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label">Descripción</label>
        <input asp-for="Descripcion" class="form-control" placeholder="Ej: Supermercado" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Monto" class="form-label">Monto</label>
        <div class="input-group">
            <span class="input-group-text">$</span>
            <input asp-for="Monto" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
        </div>
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Fecha" class="form-label">Fecha</label>
        <input asp-for="Fecha" class="form-control" type="date" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Tipo" class="form-label">Tipo</label>
        <select asp-for="Tipo" class="form-select">
            <option value="">-- Seleccionar --</option>
            <option value="0">Ingreso</option>
            <option value="1">Gasto</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label">Categoría</label>
        <select asp-for="CategoriaId" class="form-select">
            <option value="">-- Seleccionar --</option>
            @foreach (var categoria in Model.Categorias)
            {
                <option value="@categoria.Id" style="background-color: @categoria.Color">
                    @categoria.Nombre
                </option>
            }
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Comentario" class="form-label">Comentario <span class="text-muted">(opcional)</span></label>
        <textarea asp-for="Comentario" class="form-control" rows="3" placeholder="Alguna nota adicional..."></textarea>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>

</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}